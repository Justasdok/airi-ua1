<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.airi.app">

    <!-- Пристрій має мікрофон (але не робимо його обов’язковим, щоб не ламати встановлення на емуляторах) -->
    <uses-feature android:name="android.hardware.microphone" android:required="false"/>

    <!-- Мережа та базове -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- Голос/мікрофон -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <!-- Нотифікації та робота у фронтграунді -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!-- Android 14+ вимагає окремий дозвіл для сервісів, які використовують мікрофон -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE"/>

    <!-- Bluetooth для гарнітур (Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>

    <!-- За потреби збереження/читання медіа (не обов’язково, можна прибрати)
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <!-- Головна активність Capacitor -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="unspecified"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|smallestScreenSize|screenLayout|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- Підтримка deep links (залишаємо як у шаблоні, не заважає) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="https"/>
            </intent-filter>
        </activity>

        <!-- FileProvider потрібен Capacitor (шаринг файлів/зображень тощо) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <!-- За потреби: foreground-сервіс для «Слуху» (оголошення сервісу, якщо він у тебе є)
        <service
            android:name=".HearingForegroundService"
            android:exported="false"
            android:foregroundServiceType="microphone|mediaPlayback"/>
        -->
    </application>

</manifest>